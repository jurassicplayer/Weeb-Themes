style "list-header"
{
   #Comment out the ythickness setting below for thicker column headers.
 ythickness = 3
    GtkTreeView::odd_row_color  = "#181818"
    GtkTreeView::even_row_color = "#121212"
#  bg[NORMAL] = "#121212"
#  bg[PRELIGHT] = "#121212"
#  bg[SELECTED] = "#121212"
#  bg[ACTIVE] = "#121212"
#  bg[INSENSITIVE] = "#121212"
  base[NORMAL] = "#004B2E"
#  base[PRELIGHT] = "#121212"
#  base[SELECTED] = "#121212"
#  base[ACTIVE] = "#121212"
#  base[INSENSITIVE] = "#121212"
   engine "pixmap" 
    {

    #This image is used to draw the headers of columns in list views when they are
    #not selected.
        image
            {
                function            = BOX
            recolorable     = TRUE
            state               = NORMAL
            file                    = "ListHeaders/list_header.png"
            border              = { 2, 2, 1, 1 }
            stretch             = TRUE
            }

    #This image is used to draw the column headers in list views when they are
    #clicked.
        image
            {
                function            = BOX
            recolorable     = TRUE
            state               = PRELIGHT
            file                    = "ListHeaders/list_header-prelight.png"
            border              = { 2, 2, 1, 1 }
            stretch             = TRUE
            }



    image
            {
                function            = BOX
            recolorable     = TRUE
            state               = ACTIVE
            file                    = "ListHeaders/list_header-pressed.png"
            border              = { 2, 2, 1, 1 }
            stretch             = TRUE
            }
    image
            {
                function            = BOX
            recolorable     = TRUE
            state               = SELECTED
            file                    = "ListHeaders/list_header-pressed.png"
            border              = { 2, 2, 1, 1 }
            stretch             = TRUE
            }
    image
            {
                function            = BOX
            recolorable     = TRUE
            state               = INSENSITIVE
            file                    = "ListHeaders/list_header-insens.png"
            border              = { 2, 2, 1, 1 }
            stretch             = TRUE
        }
    image
    {
        function            = FLAT_BOX
        state               = SELECTED
        border          = {5,5,5,5}
                stretch             = TRUE
        file                = "ListHeaders/tree.png"
    }
    }
}

widget_class "*List" style "list-header"
widget_class "*GtkTree*" style "list-header"
widget_class "*GtkCList*" style "list-header"
widget_class "*GtkCTree*" style "list-header"
widget_class "*GtkList*" style "list-header"
widget_class "*.ETree.*" style "list-header"
class "GtkTreeView" style "list-header"


